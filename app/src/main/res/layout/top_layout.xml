<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="@color/colorPrimary">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:id="@+id/linearLayout"
        android:layout_alignParentStart="true">

        <FrameLayout
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@mipmap/ic_menu_black_24dp"
                android:layout_gravity="center"
                android:tint="@color/colorTextLight"
                android:src="@mipmap/ic_menu_black_24dp" />
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dingFood"
            android:textSize="24dp"
            android:textColor="@color/colorTextfocused"
            android:fontFamily="@string/button_textFamily"
            android:layout_gravity="center_vertical"
            android:id="@+id/actionBar_name"
            android:layout_weight="1"
            android:layout_marginLeft="48dp" />

        <FrameLayout
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/imageView2"
                android:background="@mipmap/ic_more_vert_black_24dp"
                android:layout_alignTop="@+id/linearLayout"
                android:layout_alignEnd="@+id/linearLayout2"
                android:layout_gravity="center"
                android:tint="@color/colorTextLight"
                android:src="@mipmap/ic_more_vert_black_24dp" />
        </FrameLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#737373"
        android:layout_gravity="bottom"></FrameLayout>

</FrameLayout>