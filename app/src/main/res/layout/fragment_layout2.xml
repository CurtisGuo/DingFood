<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="#ffffff">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="403dp"
        android:layout_weight="1"
        android:id="@+id/main_image"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:background="#ffffff">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/main_resImage"
            android:alpha="0.9"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@mipmap/shake" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="#ffffff"
            android:layout_weight="1"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/main_resName"
                android:layout_marginLeft="8dp"
                android:textSize="34dp"
                android:textColor="@color/colorTextDark"
                android:fontFamily="@string/button_textFamily"
                android:text="     shake your phone" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/main_address"
                    android:fontFamily="@string/button_textFamily" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"></FrameLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="8dp">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:background="#ffffff"
                    android:id="@+id/main_infoIcon"
                    android:layout_weight="1">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#ffffff"
                        android:layout_gravity="center"
                        android:clickable="true"
                        android:onClick="gotoDetail"
                        android:layout_marginLeft="0.5dp"
                        android:layout_marginTop="0.5dp"
                        android:layout_marginRight="0.5dp"
                        android:layout_marginBottom="0.5dp"
                        android:contextClickable="true"
                        android:id="@+id/moredetail_button">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="MORE DETAIL"
                            android:id="@+id/main_moreDetailText"
                            android:layout_gravity="center"
                            android:textColor="#ffffff"
                            android:fontFamily="@string/button_textFamily"
                            android:clickable="true"
                            android:onClick="gotoDetail"
                            android:textSize="20dp" />
                    </FrameLayout>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="16dp"
                    android:background="#ffffff"
                    android:clickable="false"
                    android:id="@+id/main_mapbutton">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="MAP"
                        android:id="@+id/textView10"
                        android:layout_gravity="center"
                        android:fontFamily="@string/button_textFamily"
                        android:textSize="20dp"
                        android:textColor="@color/colorTextLight" />
                </FrameLayout>
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"></FrameLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>